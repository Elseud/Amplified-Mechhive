                                                    <allySizeMultiplier>1</allySizeMultiplier>
                                                    <maxAllyDistance>3</maxAllyDistance>
                                                    <groupingDistance>3</groupingDistance>
                                                    <ability>AM_SwarmerLongjump</ability>
                                                </li>

                                            </subNodes>
                                        </li>

                                    </subNodes>
                                </li>

                            </subNodes>
                        </li>

                    </subNodes>
                </li>
            </subNodes>
        </thinkRoot>
    </ThinkTreeDef>

    
