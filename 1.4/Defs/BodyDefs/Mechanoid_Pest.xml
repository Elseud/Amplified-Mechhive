        <bleedRate>0</bleedRate>
        <alive>false</alive>
        <tags>
            <li>ManipulationLimbSegment</li>
        </tags>
    </BodyPartDef>

    <!-- Body Part Group Defs -->

    <BodyPartGroupDef>
        <defName>VM_LeftPincer</defName>
        <label>left pincer</label>
    </BodyPartGroupDef>
    
    <BodyPartGroupDef>
        <defName>VM_RightPincer</defName>
        <label>right pincer</label>
    </BodyPartGroupDef>

    <!-- Body Defs (Pain in the ass) -->

    <BodyDef>
		<defName>VM_MechanicalPest</defName>
		<label>pest</label>
		<corePart>
			<def>VM_MechanicalBodySmall</def>
			<height>Middle</height>
			<depth>Outside</depth>
			<parts>
				<li>
					<def>VM_PestTubing</def>
					<coverage>0.05</coverage>
					<depth>Outside</depth>
					<customLabel>left tubing</customLabel>
				</li>

				<li>
					<def>VM_PestTubing</def>
					<coverage>0.05</coverage>
					<depth>Outside</depth>
					<customLabel>right tubing</customLabel>
				</li>
                
                <li>
					<def>VM_SmallWheel</def>
					<coverage>0.025</coverage>
					<depth>Outside</depth>
					<height>Bottom</height>
				</li>
                
                <li>
					<def>VM_SmallWheel</def>
					<coverage>0.0025</coverage>
					<depth>Outside</depth>
					<height>Bottom</height>
				</li>
                
                <li>
					<def>VM_SmallWheel</def>
					<coverage>0.0025</coverage>
					<depth>Outside</depth>
					<height>Bottom</height>
				</li>
                
                <li>
					<def>VM_SmallWheel</def>
					<coverage>0.0025</coverage>
					<depth>Outside</depth>
					<height>Bottom</height>
				</li>

                <li>
                    <def>VM_Pincer</def>
                    <coverage>0.05</coverage>
                    <height>Middle</height>
                    <customLabel>left pincer</customLabel>
                    <groups>
                        <li>VM_LeftPincer</li>
                    </groups>
                </li>

                <li>
                    <def>VM_Pincer</def>
                    <coverage>0.05</coverage>
                    <height>Middle</height>
                    <customLabel>right pincer</customLabel>
                    <groups>
                        <li>VM_RightPincer</li>
                    </groups>
                </li>

				<li>
					<def>VM_ToxinContainer</def>
					<coverage>0.10</coverage>
					<depth>Outside</depth>
				</li>

				<li>
					<def>VM_MechanicalCorePest</def>
					<coverage>0.25</coverage>
					<height>Middle</height>
					<parts>
						<li>
							<def>VM_MechanicalGearBoxSwarmer</def>
							<coverage>0.4</coverage>
							<depth>Inside</depth>
						</li>
					</parts>
				</li>

                <li>
					<def>MechanicalHead</def>
					<coverage>0.15</coverage>
					<depth>Outside</depth>
					<parts>
                        <li>
                            <def>ArtificialBrain</def>
                            <coverage>0.15</coverage>
                            <depth>Inside</depth>
                        </li>
                        
						<li>
							<def>SightSensor</def>
							<coverage>0.15</coverage>
							<customLabel>left sight sensor</customLabel>
						</li>

						<li>
							<def>SightSensor</def>
							<coverage>0.15</coverage>
							<customLabel>right sight sensor</customLabel>
						</li>

						<li>
							<def>ArtificialBrain</def>
							<coverage>0.15</coverage>
							<depth>Inside</depth>
						</li>

                        <li>
                            <def>HearingSensor</def>
                            <customLabel>left hearing sensor</customLabel>
                            <coverage>0.025</coverage>
                        </li>

                        <li>
                            <def>HearingSensor</def>
                            <customLabel>left hearing sensor</customLabel>
                            <coverage>0.025</coverage>
                        </li>

                        <li>
                            <def>VM_MechanicalAntenna</def>
                            <coverage>0.025</coverage>
                        </li>

                        <li>
                            <def>SmellSensor</def>
                            <coverage>0.05</coverage>
                        </li>
					</parts>
				</li>
			</parts>
		</corePart>
	</BodyDef>
</Defs>