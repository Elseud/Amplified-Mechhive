<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
    <!-- Body Part Defs -->

    <BodyPartDef>
        <defName>VM_MechanicalShell</defName>
        <label>shell</label>
        <hitPoints>20</hitPoints>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <bleedRate>0</bleedRate>
        <alive>false</alive>
    </BodyPartDef>
    
    <BodyPartDef>
        <defName>VM_Mandibles</defName>
        <label>mandibles</label>
        <hitPoints>5</hitPoints>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <bleedRate>0</bleedRate>
        <alive>false</alive>
        <tags>
            <li>EatingPathway</li>
        </tags>
    </BodyPartDef>
    
    <BodyPartDef>
        <defName>VM_Claw</defName>
        <label>claw</label>
        <hitPoints>5</hitPoints>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <bleedRate>0</bleedRate>
        <alive>false</alive>
        <tags>
            <li>ManipulationLimbSegment</li>
        </tags>
    </BodyPartDef>
    
    <BodyPartDef>
        <defName>VM_MechanicalAntenna</defName>
        <label>antenna</label>
        <hitPoints>2</hitPoints>
        <frostbiteVulnerability>10</frostbiteVulnerability>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <bleedRate>0</bleedRate>
        <alive>false</alive>
        <pawnGeneratorCanAmputate>true</pawnGeneratorCanAmputate>
        <tags>
            <li>TalkingPathway</li>
        </tags>
    </BodyPartDef>
    
    <BodyPartDef>
        <defName>VM_MechanicalCoreSwarmer</defName>
        <label>core</label>
        <hitPoints>10</hitPoints>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <bleedRate>0</bleedRate>
        <alive>false</alive>
    </BodyPartDef>

    <BodyPartDef>
        <defName>VM_MechanicalSwarmerLeg</defName>
        <label>mechanical leg</label>
        <hitPoints>5</hitPoints>
        <frostbiteVulnerability>5</frostbiteVulnerability>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <bleedRate>0</bleedRate>
        <alive>false</alive>
        <tags>
            <li>ManipulationLimbSegment</li>
            <li>MovingLimbSegment</li>
        </tags>
    </BodyPartDef>

    <BodyPartDef>
        <defName>VM_MechanicalGearBoxSwarmer</defName>
        <label>gear box</label>
        <hitPoints>10</hitPoints>
        <frostbiteVulnerability>5</frostbiteVulnerability>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <bleedRate>0</bleedRate>
        <alive>false</alive>
        <tags>
            <li>MovingLimbCore</li>
            <li>ManipulationLimbCore</li>
        </tags>
    </BodyPartDef>

    <!-- Body Part Group Defs -->
    
    <BodyPartGroupDef>
        <defName>VM_Mandibles</defName>
        <label>mandibles</label>
    </BodyPartGroupDef>

    <BodyPartGroupDef>
        <defName>VM_LeftClaw</defName>
        <label>left claw</label>
    </BodyPartGroupDef>
    
    <BodyPartGroupDef>
        <defName>VM_RightClaw</defName>
        <label>right claw</label>
    </BodyPartGroupDef>

    <BodyPartGroupDef>
        <defName>VM_FrontLegs</defName>
        <label>front leg</label>
    </BodyPartGroupDef>

    <!-- Body Defs (Pain in the ass) -->
    
    <BodyDef>
		<defName>VM_MechanicalSwarmer</defName>
		<label>swarmer</label>
		<corePart>
			<def>VM_MechanicalShell</def>
			<height>Middle</height>
			<depth>Outside</depth>
            <parts>
                <li>
                    <def>VM_Mandibles</def>
                    <coverage>0.04</coverage>
                    <height>Top</height>
                    <groups>
                        <li>VM_Mandibles</li>
                    </groups>
                </li>

                <li>
                    <def>VM_MechanicalCoreSwarmer</def>
                    <coverage>0.38</coverage>
                    <height>Top</height>
                    <parts>
                        <li>
                            <def>VM_MechanicalGearBoxSwarmer</def>
                            <coverage>0.4</coverage>
                            <depth>Inside</depth>
                        </li>

                        <li>
                            <def>ArtificialBrain</def>
                            <coverage>0.15</coverage>
                            <depth>Inside</depth>
                        </li>

                        <li>
                            <def>SightSensor</def>
                            <customLabel>left sight sensor</customLabel>
                            <coverage>0.15</coverage>
                        </li>

                        <li>
                            <def>SightSensor</def>
                            <customLabel>right sight sensor</customLabel>
                            <coverage>0.15</coverage>
                        </li>

                        <li>
                            <def>HearingSensor</def>
                            <customLabel>left hearing sensor</customLabel>
                            <coverage>0.025</coverage>
                        </li>

                        <li>
                            <def>HearingSensor</def>
                            <customLabel>left hearing sensor</customLabel>
                            <coverage>0.025</coverage>
                        </li>

                        <li>
                            <def>VM_MechanicalAntenna</def>
                            <coverage>0.025</coverage>
                        </li>

                        <li>
                            <def>SmellSensor</def>
                            <coverage>0.05</coverage>
                        </li>
                    </parts>
                </li>

                <li>
                    <def>VM_Claw</def>
                    <coverage>0.06</coverage>
                    <height>Middle</height>
                    <customLabel>left claw</customLabel>
                    <groups>
                        <li>VM_LeftClaw</li>
                    </groups>
                </li>

                <li>
                    <def>VM_Claw</def>
                    <coverage>0.06</coverage>
                    <height>Middle</height>
                    <customLabel>right claw</customLabel>
                    <groups>
                        <li>VM_RightClaw</li>
                    </groups>
                </li>
                
                <li>
                    <def>VM_MechanicalSwarmerLeg</def>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <customLabel>front left leg</customLabel>
                    <groups>
                        <li>VM_FrontLegs</li>
                    </groups>
                </li>

                <li>
                    <def>VM_MechanicalSwarmerLeg</def>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <customLabel>front right leg</customLabel>
                    <groups>
                        <li>VM_FrontLegs</li>
                    </groups>
                </li>

                <li>
                    <def>VM_MechanicalSwarmerLeg</def>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <customLabel>middle left leg</customLabel>
                </li>

                <li>
                    <def>VM_MechanicalSwarmerLeg</def>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <customLabel>middle right leg</customLabel>
                </li>

                <li>
                    <def>VM_MechanicalSwarmerLeg</def>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <customLabel>rear left leg</customLabel>
                </li>

                <li>
                    <def>VM_MechanicalSwarmerLeg</def>
                    <coverage>0.06</coverage>
                    <height>Bottom</height>
                    <customLabel>rear right leg</customLabel>
                </li>
            </parts>
        </corePart>
    </BodyDef>
</Defs>